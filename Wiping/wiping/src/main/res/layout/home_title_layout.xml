<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#80000000">
    <ImageButton
            android:id="@+id/btn_more"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/hightlight_bkg"
            android:clickable="true"
            android:onClick="onMoreButtonClicked"
            android:src="@drawable/ic_more"/>

    <ImageButton
            android:id="@+id/btn_photo"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/btn_more"
            android:background="@drawable/hightlight_bkg"
            android:clickable="true"
            android:onClick="onCameraClicked"
            android:src="@drawable/ic_camera"/>
    <TextView
            android:id="@+id/btn_browse"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@drawable/hightlight_bkg"
            android:layout_toLeftOf="@id/btn_photo"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/image_browse"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

</RelativeLayout>