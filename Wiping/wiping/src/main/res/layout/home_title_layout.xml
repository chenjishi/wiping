<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#E5E5E5">
    <ImageButton
            android:id="@+id/btn_more"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/hightlight_bkg"
            android:clickable="true"
            android:onClick="onMoreButtonClicked"
            android:src="@drawable/ic_more"/>
    <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#666"/>

    <ImageButton
            android:id="@+id/btn_photo"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/btn_more"
            android:background="@drawable/hightlight_bkg"
            android:clickable="true"
            android:onClick="onCameraClicked"
            android:src="@drawable/ic_camera"/>
    <TextView
            android:id="@+id/btn_browse"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@drawable/hightlight_bkg"
            android:layout_toLeftOf="@id/btn_photo"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/image_browse"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>
    <View
            android:id="@+id/split_h"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#cacaca"/>
</RelativeLayout>