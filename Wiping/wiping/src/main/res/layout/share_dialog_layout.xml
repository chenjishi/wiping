<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
              android:weightSum="5">
    <ImageButton
            android:id="@+id/share_session"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_weixin"
            android:background="@drawable/hightlight_bkg"/>
    <ImageButton
            android:id="@+id/share_timeline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_pengyouquan"
            android:background="@drawable/hightlight_bkg"/>
    <ImageButton
            android:id="@+id/share_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_weibo"
            android:background="@drawable/hightlight_bkg"/>
    <ImageButton
            android:id="@+id/save_local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_download"
            android:background="@drawable/hightlight_bkg"/>
</LinearLayout>